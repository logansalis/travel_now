@model ProfileViewModel
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <span class="navbar-brand mb-0 h1">Travel Now</span>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link mr-2" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link mr-2" asp-action="NewListing" asp-controller="Listing">List Property</a>
            </li>
            <li class="nav-item">
                <a class="nav-link mr-2 active" asp-action="Profile" asp-controller="Home">Profile</a>
            </li>
            <li class="nav-item"></li>
                <a class="nav-link" asp-action="Logout" asp-controller="Home">Logout</a>
            </li>
        </ul>
    </nav>
</header>
<main class="container mt-3">
    <section class="row align-items-center mb-5">
        <div class="col-2">
            <img src="@Model.User.Avatar" alt="" style="width: 100px;">
        </div>
        <div class="col">
            <h4>@Model.User.FirstName @Model.User.LastName</h4>
            <p class="m-0"><span class="font-weight-bold">Email:</span> @Model.User.Email</p>
            <p class="m-0"><span class="font-weight-bold">DOB:</span> @Model.User.DOB.ToString("MM/dd/yyyy")</p>
        </div>
        <div class="col">
            <a class="btn btn-sm btn-info text-white">Edit Profile</a>
        </div>
    </section>
    <h3>Listings</h3>
    <section class="row ml-3">
        <div class="col">
            <p>Total Listings:</p>
            <p>Avg. Price/Night:</p>
            <p>Avg Bookings/Month:</p>
        </div>
        <div class="col">
            <p>@Model.ListCount</p>
            <p>@Model.AvgListPrice</p>
            <p>@Model.AvgNumBooking</p>
        </div>
        <div class="col">
            <a class="btn btn-info text-white" asp-action="AccountListings" asp-controller="Home">Manage Listings</a>
        </div>
    </section>
    <hr>
    <h3>Bookings</h3>
    <section class="row ml-3 align-items-center">
        <div class="col">
            <p>Total Bookings:</p>
            <p>Avg. Spent/Night:</p>
            <p>Avg Stay:</p>
        </div>
        <div class="col">
            <p>@Model.BookCount</p>
            <p>@Model.AvgSpend</p>
            <p>@Model.AvgStayLength</p>
        </div>
        <div class="col">
            <a class="btn btn-info text-white" asp-action="AccountBookings" asp-controller="Home">Manage Bookings</a>
        </div>
    </section>
</main>