@model User
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <span class="navbar-brand mb-0 h1">Travel Now</span>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link mr-2" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link mr-2" asp-action="NewListing" asp-controller="Listing">List Property</a>
            </li>
            <li class="nav-item">
                <a class="nav-link mr-2" asp-action="Profile" asp-controller="Home">Profile</a>
            </li>
            <li class="nav-item"></li>
                <a class="nav-link" asp-action="Logout" asp-controller="Home">Logout</a>
            </li>
        </ul>
    </nav>
</header>
<main class="container mt-3">
    <section class="row align-items-center mb-5">
        <div class="col-1">
            <img src="@Model.Avatar" alt="" style="width: 50px;">
        </div>
        <div class="col">
            <h4>@Model.FirstName @Model.LastName</h4>
        </div>
    </section>
    <section>
        <h1 class="col mb-5">Your Current Bookings</h1>
        <section style="height: 400px" class="overflow-auto mb-5 border">
            @foreach (Booking booking in Model.Bookings)
            {
                <div class="card mb-3" style="max-width: 600px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                        <img src="~/images/house.jpeg" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title m-0"><a href="/TravelNow/Listing/Details/@booking.Listing.ListingID">@booking.Listing.Title</a></h5>
                                </div>
                                <div class="col-3">
                                    <small class="card-text">
                                        <a class="text-danger" href="/TravelNow/Account/Listings/@booking.BookingID/Cancel">Cancel</a>
                                    </small>
                                </div>
                            </div>
                            <p class="card-text">@booking.Listing.Address.City, @booking.Listing.Address.State</p>
                            <div class="row">
                                <p class="col card-text m-0">$@booking.Listing.Price/Night</p>
                                <small class="col card-text m-0">@booking.CheckIn.ToString("MM/dd/yyyy") - @booking.CheckOut.ToString("MM/dd/yyyy")</small>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            }
        </section>
            <a href="/TravelNow/SearchResults" class="btn btn-lg btn-info text-white">Find New Destination</a>
    </section>
</main>